<Window x:Class="AddInputedValues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddInputedValues"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20" Orientation="Horizontal">
        <StackPanel Margin="10">
            <Label
             Content="Enter Some Values"
             Height="40"
             Width="280"
             FontSize="20"
             Background="LightGreen"
         />
            <TextBox
             x:Name="txtBox1"
             Margin="10"
             Height="40"
             Width="100" 
             FontSize="20"
             Background="Yellow"
             TextChanged="TextBox_TextChanged"
         />
            <Button
             Margin="10"
             Content="Add"
             Height="40"
             Width="100"
             FontSize="20"
             Click="btnAddClick"
             Background="LightBlue"
         />
            <ListBox
             x:Name="lbBox2"
             Margin="10"
             Height="280"
             Width="100"
             FontSize="20"
             Background="LightGoldenrodYellow"
         />
        </StackPanel>

        <StackPanel Margin="10">
            <Label
             Content="Which result do you want:"
             Height="40"
             Width="280"
             FontSize="20"
             Background="LightGreen"
         />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button
                 Content="Ascending"
                 Height="40"
                 Width="120" 
                 Margin="10"
                 FontSize="20"
                 Click="Button_Click"
                 Background="LightCoral"
             />

                <Button
                 Content="Descending"
                 Height="40"
                 Width="120"
                 FontSize="20"
                 Background="LightCoral"
                 Click="Button_Click_1"
             />
            </StackPanel>

            <ListBox
             x:Name="outputBox"
             Height="280"
             Width="100"
             FontSize="20"
             Background="LightGoldenrodYellow"
         />

            <Button Content="Sum All" Width="100" Margin="20" Background="LightGreen" FontSize="20" Height="40" Click="btnSum"></Button>
            <TextBlock Name="sumAll" Text="" Width="100" Background="LightBlue" FontSize="20" Height="40"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
