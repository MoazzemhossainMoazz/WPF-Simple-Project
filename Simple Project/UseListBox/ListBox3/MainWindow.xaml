    <StackPanel Margin="20" Orientation="Horizontal">
        <StackPanel Margin="10">
            <Label
                Content="Enter Some Values"
                Height="40"
                Width="280"
                FontSize="20"
                Background="LightGreen"
            />
            <TextBox
                x:Name="txtBox1"
                Margin="10"
                Height="40"
                Width="100" 
                FontSize="20"
                Background="Yellow"
                TextChanged="TextBox_TextChanged"
            />
            <Button
                Margin="10"
                Content="Add"
                Height="40"
                Width="100"
                FontSize="20"
                Click="btnAddClick"
                Background="LightBlue"
            />
            <ListBox
                x:Name="lbBox2"
                Margin="10"
                Height="280"
                Width="100"
                FontSize="20"
                Background="LightGoldenrodYellow"
            />
        </StackPanel>

        <StackPanel Margin="10">
            <Label
                Content="Which result do you want:"
                Height="40"
                Width="280"
                FontSize="20"
                Background="LightGreen"
            />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button
                    Content="Ascending"
                    Height="40"
                    Width="120" 
                    Margin="10"
                    FontSize="20"
                    Click="Button_Click"
                    Background="LightCoral"
                />

                <Button
                    Content="Descending"
                    Height="40"
                    Width="120"
                    FontSize="20"
                    Background="LightCoral"
                    Click="Button_Click_1"
                />
            </StackPanel>

            <ListBox
                x:Name="lstbOutputBox"
                Height="280"
                Width="100"
                FontSize="20"
                Background="LightGoldenrodYellow"
            />

            
            <Button Content="Sum All" Width="100" Margin="20" Background="LightGreen" FontSize="20" Height="40" Click="btnSum"></Button>
            <TextBlock Name="txtbSumAll" Text="" Width="100" Background="LightBlue" FontSize="20" Height="40" TextAlignment="Center"> </TextBlock>
        </StackPanel>
    </StackPanel>


</Window>
