<Window x:Class="SortInputedValues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortInputedValues"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="20" HorizontalAlignment="left">
        <Label
            Content="Enter Some Values"
            Height="40"
            Width="280"/>
        <TextBox
            x:Name="txtBox1"
            Height="40"
            Width="280" TextChanged="TextBox_TextChanged"
            />
        <Button
            Content="Add"
            Height="40"
            Width="100"
            Click="btnAddClick"/>
        <TextBox
            x:Name="txtBox2"
            Height="40"
            Width="280"/>
        <Label
            Content="For output:"
            Height="40"
            Width="280"/>
        <StackPanel Orientation="Horizontal">
            <Button
                Content="Ascending"
                Height="40"
                Width="100" Click="Button_Click"/>
            <Button
                Content="Descending"
                Height="40"
                Width="100" Click="Button_Click_1"/>
        </StackPanel>
        <TextBlock
            x:Name="outputBox"
            Background="LightBlue"
            Height="40"
            Width="280"
            />
    </StackPanel>
</Window>
