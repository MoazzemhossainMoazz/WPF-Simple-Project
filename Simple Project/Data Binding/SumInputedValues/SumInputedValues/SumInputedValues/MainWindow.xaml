<Window x:Class="SumInputedValues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SumInputedValues"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <StackPanel Orientation="Horizontal" Height="534" VerticalAlignment="Bottom">
        <StackPanel Margin="10">
            <Label
        Content="Enter Some Values"
        Height="40"
        Width="280"
        FontSize="20"
        Background="LightGreen"
    />
            <TextBox
        x:Name="txtBox1"
        Margin="10"
        Height="40"
        Width="100" 
        FontSize="20"
        Background="Yellow"
        
    />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button
    Margin="10"
    Content="Add"
    Height="40"
    Width="100"
    FontSize="20"
    Click="btnAddClick"
    Background="LightBlue"
/>
                
            </StackPanel>
           
            <ListBox
        x:Name="lbBox2"
        Margin="10"
        Height="280"
        Width="100"
        FontSize="20"
        Background="LightGoldenrodYellow"
    />
        </StackPanel>

        <StackPanel>
            <Label
    Content="Which result do you want:"
    Height="40"
    Width="280"
    FontSize="20"
    Background="LightGreen"
/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ascending"
                        Width="100"
                        Margin="10"
                        FontSize="20"
                        Background="LightPink"
                        Click="btnAsc">
                </Button>
                <Button Content="Descending"
                        Width="100"
                        Margin="10"
                        FontSize="20"
                        Background="LightPink"
                        Click="btnDesc">
                    
                </Button>
            </StackPanel>
            <ListBox
                Name="lstbOutputBox"
                Height="280"
                Width="100"
                FontSize="20"
                Background="LightGoldenrodYellow"
                >
            </ListBox>

            <Button Content="Sum All" Width="100" FontSize="20" Margin="10" Click="btnSumAll"></Button>
            <TextBlock Name="txtbSumAll" Width="100" FontSize="20" Background="Yellow" ></TextBlock>
            
        </StackPanel>
    </StackPanel>
</Window>
