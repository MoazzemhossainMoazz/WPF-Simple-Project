<Window x:Class="Sum2Values.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sum2Values"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Background="Red">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Num-1"></Label>
            <TextBox Name="txtVal1" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Num-2"></Label>
            <TextBox Name="txtVal2" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Sum values" Width="100" Click="SumValues"></Button>
            <TextBlock Name="txtResult" Text="" Margin="10"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
