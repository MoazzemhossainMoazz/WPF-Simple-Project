<Window x:Class="MultipleWindowShow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultipleWindowShow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Window1" Width="100" Margin="10" Background="blue"></Button>
        <Button Content="Window2" Width="100" Margin="10" Background="Red"></Button>
        <Button Content="Window3" Width="100" Margin="10" Background="Yellow"></Button>
        <Button Content="Window4" Width="100" Margin="10" Background="Violet"></Button>
    </StackPanel>
</Window>
    
    
