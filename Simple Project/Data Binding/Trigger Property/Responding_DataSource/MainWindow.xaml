<Window x:Class="Responding_DataSource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Responding_DataSource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button x:Name="btnAddUser" Click="btnAddUser_Click">Add Users</Button>
            <Button x:Name="btnChangeUser" Click="btnChangeUser_Click">change Users</Button>
            <Button x:Name="btnDeleteUser" Click="btnDeleteUser_Click">Delete Users</Button>
        </StackPanel>
        <ListBox x:Name="lbUsers" DisplayMemberPath="Name"></ListBox>
        
    </DockPanel>
</Window>
